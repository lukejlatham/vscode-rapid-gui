{
  "name": "hello-world-react-cra",
  "displayName": "hello-world-react-cra",
  "description": "A hello world sample extension to demonstrate using React + CRA with the Webview UI Toolkit for VS Code.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.75.0"
  },
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "UIStudio",
          "title": "UI Studio",
          "icon": "assets/small-duck.svg"
        }
      ]
    },
    "views": {
      "UIStudio": [
        {
          "type": "tree",
          "id": "sideBarButtons",
          "name": "UI Studio"
        },
        {
          "type": "tree",
          "id": "sideBarTree",
          "name": "Recent Projects"
        }
      ]
    },
    "commands": [
      {
        "command": "mainWebviewPanel.showMainWebviewPanel",
        "title": "Open UI Studio"
      },
      {
        "command": "sidebar.showSideBar",
        "title": "Show Side Bar"
      },
      {
        "command": "extension.createProjectFromScratch",
        "title": "Create Project from Scratch"
      },
      {
        "command": "extension.createProjectFromTemplate",
        "title": "Create Project from Template"
      },
      {
        "command": "extension.createProjectFromSketch",
        "title": "Create Project from Sketch"
      },
      {
        "command": "extension.createProjectFromText",
        "title": "Create Project from Text"
      }
    ]
  },
  "scripts": {
    "install:all": "npm install && cd webview-ui && npm install",
    "start:webview": "cd webview-ui && npm run start",
    "build:webview": "cd webview-ui && npm run build",
    "test:webview": "cd webview-ui && npm run test",
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.90.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "prettier": "^2.2.1",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0"
  },
  "dependencies": {
    "@craftjs/core": "^0.2.8",
    "@vscode/webview-ui-toolkit": "^1.4.0",
    "axios": "^1.7.2",
    "dotenv": "^16.4.5",
    "form-data": "^4.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  }
}
