{
  "name": "ui-copilot",
  "displayName": "UI Copilot",
  "description": "Generate, refine, and deploy a functional UI within minutes.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.75.0"
  },
  "main": "./out/src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mainWebviewPanel.showMainWebviewPanel",
        "title": "UI Copilot: Open Editor"
      },
      {
        "command": "mainWebviewPanel.getAzureOpenaiApiKey",
        "title": "UI Copilot: Save Azure OpenAI API Key"
      },
      {
        "command": "mainWebviewPanel.getAzureOpenaiApiEndpoint",
        "title": "UI Copilot: Save Azure OpenAI API Endpoint"
      },
      {
        "command": "mainWebviewPanel.getGpt4DeploymentName",
        "title": "UI Copilot: Save Azure OpenAI GPT-4o Deployment Name"
      },
      {
        "command": "mainWebviewPanel.saveOpenaiApiKey",
        "title": "UI Copilot: Save OpenAI API Key"
      }
    ]
  },
  "scripts": {
    "install:all": "npm install && cd webview-ui && npm install",
    "start:webview": "cd webview-ui && npm run start",
    "build:webview": "cd webview-ui && npm run build",
    "test:webview": "cd webview-ui && npm run test",
    "test:backend": "jest --config jest.config.ts",
    "test:all": "npm run test:backend && npm run test:webview",
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^12.11.7",
    "@types/react-grid-layout": "^1.3.5",
    "@types/uuid": "^10.0.0",
    "@types/vscode": "^1.90.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "cross-env": "^7.0.3",
    "eslint": "^7.19.0",
    "jest": "^29.7.0",
    "prettier": "^2.2.1",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^4.9.5",
    "vscode-test": "^1.5.0"
  },
  "dependencies": {
    "@craftjs/core": "^0.2.8",
    "@fluentui/react-theme": "^9.1.19",
    "@instructor-ai/instructor": "^1.5.0",
    "@vscode/webview-ui-toolkit": "^1.4.0",
    "axios": "^1.7.2",
    "esbuild": "^0.23.0",
    "esbuild-plugin-env": "^1.1.1",
    "form-data": "^4.0.0",
    "openai": "^4.52.7",
    "react": "^18.3.1",
    "react-contenteditable": "^3.3.7",
    "react-dom": "^18.3.1",
    "react-grid-layout": "^1.4.4",
    "react-icons": "^5.2.1",
    "uuid": "^10.0.0",
    "zod": "^3.23.8"
  }
}
