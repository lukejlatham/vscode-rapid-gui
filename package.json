{
  "name": "ui-copilot",
  "displayName": "UI Copilot",
  "description": "Generate, refine, and deploy a functional UI within minutes.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.75.0"
  },
  "main": "./out/src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mainWebviewPanel.showMainWebviewPanel",
        "title": "UI Copilot: Open Editor"
      },
      {
        "command": "extension.getAzureOpenaiApiKey",
        "title": "UI Copilot: Save Azure OpenAI API Key"
      },
      {
        "command": "extension.getAzureOpenaiApiEndpoint",
        "title": "UI Copilot: Save Azure OpenAI API Endpoint"
      },
      {
        "command": "extension.getGpt4DeploymentName",
        "title": "UI Copilot: Save Azure OpenAI GPT-4o Deployment Name"
      },
      {
        "command": "extension.getOpenaiApiKey",
        "title": "UI Copilot: Save OpenAI API Key"
      }
    ],
    "keybindings": [
      {
        "command": "uiCopilot.navigateTab1",
        "key": "ctrl+1",
        "when": "uiCopilotFocused"
      },
      {
        "command": "uiCopilot.navigateTab2",
        "key": "ctrl+2",
        "when": "uiCopilotFocused"
      },
      {
        "command": "uiCopilot.navigateTab3",
        "key": "ctrl+3",
        "when": "uiCopilotFocused"
      },
      {
        "command": "uiCopilot.navigateTab4",
        "key": "ctrl+4",
        "when": "uiCopilotFocused"
      },
      {
        "command": "uiCopilot.navigateTab5",
        "key": "ctrl+5",
        "when": "uiCopilotFocused"
      },
      {
        "command": "uiCopilot.addComponent",
        "key": "ctrl+a",
        "when": "uiCopilotFocused"
      },
      {
        "command": "uiCopilot.focusPropertyInspector",
        "key": "ctrl+p",
        "when": "uiCopilotFocused"
      },
      {
        "command": "uiCopilot.toggleGrid",
        "key": "ctrl+g",
        "when": "uiCopilotFocused"
      },
      {
        "command": "uiCopilot.increaseRows",
        "key": "ctrl+shift+up",
        "when": "uiCopilotFocused"
      },
      {
        "command": "uiCopilot.decreaseRows",
        "key": "ctrl+shift+down",
        "when": "uiCopilotFocused"
      },
      {
        "command": "uiCopilot.increaseColumns",
        "key": "ctrl+shift+right",
        "when": "uiCopilotFocused"
      },
      {
        "command": "uiCopilot.decreaseColumns",
        "key": "ctrl+shift+left",
        "when": "uiCopilotFocused"
      },
      {
        "command": "uiCopilot.addPage",
        "key": "ctrl+n",
        "when": "uiCopilotFocused"
      },
      {
        "command": "uiCopilot.renamePage",
        "key": "f2",
        "when": "uiCopilotFocused"
      },
      {
        "command": "uiCopilot.deletePage",
        "key": "ctrl+shift+delete",
        "when": "uiCopilotFocused"
      },
      {
        "command": "uiCopilot.resetPage",
        "key": "ctrl+r",
        "when": "uiCopilotFocused"
      },
      {
        "command": "uiCopilot.nextPage",
        "key": "ctrl+tab",
        "when": "uiCopilotFocused"
      },
      {
        "command": "uiCopilot.previousPage",
        "key": "ctrl+shift+tab",
        "when": "uiCopilotFocused"
      },
      {
        "command": "uiCopilot.applyFont",
        "key": "ctrl+f",
        "when": "uiCopilotFocused"
      },
      {
        "command": "uiCopilot.applyTheme",
        "key": "ctrl+t",
        "when": "uiCopilotFocused"
      },
      {
        "command": "uiCopilot.undo",
        "key": "ctrl+z",
        "when": "uiCopilotFocused"
      },
      {
        "command": "uiCopilot.redo",
        "key": "ctrl+y",
        "when": "uiCopilotFocused"
      },
      {
        "command": "uiCopilot.saveProject",
        "key": "ctrl+s",
        "when": "uiCopilotFocused"
      },
      {
        "command": "uiCopilot.loadProject",
        "key": "ctrl+o",
        "when": "uiCopilotFocused"
      },
      {
        "command": "uiCopilot.exportProject",
        "key": "ctrl+e",
        "when": "uiCopilotFocused"
      },
      {
        "command": "uiCopilot.restartProject",
        "key": "ctrl+shift+r",
        "when": "uiCopilotFocused"
      },
      {
        "command": "uiCopilot.toggleAccessibility",
        "key": "ctrl+shift+a",
        "when": "uiCopilotFocused"
      },
      {
        "command": "uiCopilot.startFromScratch",
        "key": "ctrl+shift+n",
        "mac": "cmd+shift+n",
        "when": "uiCopilotFocused"
      },
      {
        "command": "uiCopilot.startFromTemplate",
        "key": "ctrl+shift+t",
        "mac": "cmd+shift+t",
        "when": "uiCopilotFocused"
      },
      {
        "command": "uiCopilot.startFromText",
        "key": "ctrl+shift+x",
        "mac": "cmd+shift+x",
        "when": "uiCopilotFocused"
      },
      {
        "command": "uiCopilot.startFromSketch",
        "key": "ctrl+shift+k",
        "mac": "cmd+shift+k",
        "when": "uiCopilotFocused"
      }
    ]
  },
  "scripts": {
    "install:all": "npm install && cd webview-ui && npm install",
    "start:webview": "cd webview-ui && npm run start",
    "build:webview": "cd webview-ui && npm run build",
    "test:webview": "cd webview-ui && npm run test",
    "test:backend": "jest --config jest.config.ts",
    "test:all": "npm run test:backend && npm run test:webview",
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^12.11.7",
    "@types/react-grid-layout": "^1.3.5",
    "@types/uuid": "^10.0.0",
    "@types/vscode": "^1.90.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "cross-env": "^7.0.3",
    "eslint": "^7.19.0",
    "jest": "^29.7.0",
    "prettier": "^2.2.1",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^4.9.5",
    "vscode-test": "^1.5.0"
  },
  "dependencies": {
    "@craftjs/core": "^0.2.8",
    "@fluentui/react-theme": "^9.1.19",
    "@instructor-ai/instructor": "^1.5.0",
    "@vscode/webview-ui-toolkit": "^1.4.0",
    "axios": "^1.7.2",
    "esbuild": "^0.23.0",
    "esbuild-plugin-env": "^1.1.1",
    "form-data": "^4.0.0",
    "node-fetch": "^2.7.0",
    "obscenity": "^0.4.0",
    "openai": "^4.52.7",
    "react": "^18.3.1",
    "react-contenteditable": "^3.3.7",
    "react-dom": "^18.3.1",
    "react-grid-layout": "^1.4.4",
    "react-icons": "^5.2.1",
    "uuid": "^10.0.0",
    "zod": "^3.23.8"
  }
}
