{
  "name": "generatedLayout",
  "description": "Fetches the weather in the given location",
  "strict": true,
  "parameters": {
    "type": "object",
    "properties": {
      "section": {
        "type": "string"
      },
      "xPosition": {
        "type": "number"
      },
      "yPosition": {
        "type": "number"
      },
      "width": {
        "type": "number"
      },
      "height": {
        "type": "number"
      },
      "flexDirection": {
        "type": "string",
        "enum": ["row", "column"]
      },
      "backgroundColor": {
        "type": "string",
        "enum": ["Main", "LightAccent", "DarkAccent"]
      },
      "children": {
        "type": "array",
        "items": {
          "anyOf": [
            {
              "type": "object",
              "properties": {
                "type": { "const": "Button" },
                "VscIcon": { "type": "string" },
                "backgroundColor": {
                  "type": "string",
                  "enum": ["Main", "LightAccent", "DarkAccent"]
                },
                "fontColor": { "type": "string", "enum": ["Main", "LightAccent", "DarkAccent"] }
              },
              "required": ["type", "VscIcon", "backgroundColor", "fontColor"]
            },
            {
              "type": "object",
              "properties": {
                "type": { "const": "Checkboxes" },
                "optionLabels": {
                  "type": "array",
                  "items": { "type": "string" }
                },
                "numberOfBoxes": { "type": "number" }
              },
              "required": ["type", "optionLabels", "numberOfBoxes"]
            },
            {
              "type": "object",
              "properties": {
                "type": { "const": "Icon" },
                "VscIcon": { "type": "string" }
              },
              "required": ["type", "VscIcon"]
            },
            {
              "type": "object",
              "properties": {
                "type": { "const": "Input" },
                "fontColor": { "type": "string", "enum": ["Main", "LightAccent", "DarkAccent"] }
              },
              "required": ["type", "fontColor"]
            },
            {
              "type": "object",
              "properties": {
                "type": { "const": "Label" },
                "text": { "type": "string" },
                "bold": { "type": "boolean" },
                "fontColor": { "type": "string", "enum": ["Main", "LightAccent", "DarkAccent"] },
                "fontSize": { "type": "number" }
              },
              "required": ["type", "text", "bold", "fontColor", "fontSize"]
            },
            {
              "type": "object",
              "properties": {
                "type": { "const": "RadioButtons" },
                "header": { "type": "string" },
                "numberOfButtons": { "type": "number" },
                "optionLabels": {
                  "type": "array",
                  "items": { "type": "string" }
                }
              },
              "required": ["type", "header", "numberOfButtons", "optionLabels"]
            },
            {
              "type": "object",
              "properties": {
                "type": { "const": "Text" },
                "fontColor": { "type": "string", "enum": ["Main", "LightAccent", "DarkAccent"] }
              },
              "required": ["type", "fontColor"]
            },
            {
              "type": "object",
              "properties": {
                "type": { "const": "Image" },
                "alt": { "type": "string" },
                "width": { "type": "number" }
              },
              "required": ["type", "alt", "width"]
            },
            {
              "type": "object",
              "properties": {
                "type": { "const": "Slider" },
                "header": { "type": "string" },
                "backgroundColor": {
                  "type": "string",
                  "enum": ["Main", "LightAccent", "DarkAccent"]
                }
              },
              "required": ["type", "header", "backgroundColor"]
            },
            {
              "type": "object",
              "properties": {
                "type": { "const": "Dropdown" },
                "header": { "type": "string" },
                "optionLabels": {
                  "type": "array",
                  "items": { "type": "string" }
                },
                "numberOfOptions": { "type": "number" }
              },
              "required": ["type", "header", "optionLabels", "numberOfOptions"]
            }
          ]
        }
      }
    },
    "required": [
      "section",
      "xPosition",
      "yPosition",
      "width",
      "height",
      "flexDirection",
      "backgroundColor",
      "children"
    ]
  }
}
